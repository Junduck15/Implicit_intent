<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etweb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter web URL" />

    <Button
        android:onClick="onWeb"
        android:id="@+id/webbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPEN WEB" />

    <EditText
        android:id="@+id/etlocname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Location Name" />

    <Button
        android:onClick="onLoc"
        android:id="@+id/locbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPEN LOCATION" />

    <EditText
        android:id="@+id/etshare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Text" />

    <Button
        android:onClick="onShare"
        android:id="@+id/sharebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE THIS TEXT" />

</LinearLayout>

